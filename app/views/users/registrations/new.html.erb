<% content_for :title do 'Edit' end%>
<% content_for :subtitle do resource_name.to_s.humanize end%>
<div class="card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :firstname, class: "col-lg-3 col-form-label" %>
        <%= f.text_field :firstname, class: 'form-control col-lg-9', autofocus: true, placeholder: :firstname %>
      </div>
      <div class="form-group row">
        <%= f.label :lastname, class: "col-lg-3 col-form-label" %>
        <%= f.text_field :lastname, class: 'form-control col-lg-9', placeholder: :lastname %>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: "col-lg-3 col-form-label" %>
        <%= f.email_field :email, class: 'form-control col-lg-9', autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-lg-3 col-form-label" %>
        <div class="col-lg-9">
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-lg-3 col-form-label" %>
        <%= f.password_field :password_confirmation, class: 'form-control col-lg-9', autocomplete: "new-password" %>
      </div>

      <div class="actions text-right">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
